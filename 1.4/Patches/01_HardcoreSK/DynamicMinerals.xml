<?xml version="1.0" encoding="UTF-8"?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Core SK</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="ColdstoneCrystal"]/randomlyDropResources/li[ResourceDefName="RoughGem"]</xpath>
      <value>
        <li>
          <ResourceDefName>Coldstone</ResourceDefName>
          <DropProbability>5</DropProbability>
          <CountPerDrop>5</CountPerDrop>
        </li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Core SK</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="GlowstoneCrystal"]/randomlyDropResources/li[ResourceDefName="RoughGem"]</xpath>
      <value>
        <li>
          <ResourceDefName>Glowstone</ResourceDefName>
          <DropProbability>5</DropProbability>
          <CountPerDrop>5</CountPerDrop>
        </li>
      </value>
    </match>
  </Operation>


</Patch>
